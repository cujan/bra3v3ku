<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="eAutoskola" transaction-type="RESOURCE_LOCAL">

		<class>com.bra3v3ku.autoskola.dao.Automobil</class>
		<class>com.bra3v3ku.autoskola.dao.CiselnikSkupina</class>
		<class>com.bra3v3ku.autoskola.dao.Clenkurzu</class>
		<class>com.bra3v3ku.autoskola.dao.Dodanepotvrdenia</class>
		<class>com.bra3v3ku.autoskola.dao.Kurz</class>
		<class>com.bra3v3ku.autoskola.dao.Osoba</class>
		<class>com.bra3v3ku.autoskola.dao.OsobaPK</class>
		<class>com.bra3v3ku.autoskola.dao.Platba</class>
		<class>com.bra3v3ku.autoskola.dao.Studentskupinauchadzac</class>
		<class>com.bra3v3ku.autoskola.dao.Studentskupinavlastnik</class>
		<class>com.bra3v3ku.autoskola.dao.Vseobecneudaje</class>
		<class>com.bra3v3ku.autoskola.dao.Instruktor</class>
		<class>com.bra3v3ku.autoskola.dao.Student</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/e-autoskola" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="Kuriatko" />

			<!-- EclipseLink should create the database schema automatically -->
			<!-- 
			<property name="eclipselink.ddl-generation" value="create-tables" /> 
			<property name="eclipselink.ddl-generation.output-mode"	value="database" /> 
			-->
			<property name="eclipselink.ddl-generation" value="none" />
		</properties>

	</persistence-unit>
	
	<persistence-unit name="eAutoskolaDerby">
		<class>com.bra3v3ku.autoskola.dao.Automobil</class>
		<class>com.bra3v3ku.autoskola.dao.CiselnikSkupina</class>
		<class>com.bra3v3ku.autoskola.dao.Clenkurzu</class>
		<class>com.bra3v3ku.autoskola.dao.Dodanepotvrdenia</class>
		<class>com.bra3v3ku.autoskola.dao.Kurz</class>
		<class>com.bra3v3ku.autoskola.dao.Osoba</class>
		<class>com.bra3v3ku.autoskola.dao.OsobaPK</class>
		<class>com.bra3v3ku.autoskola.dao.Platba</class>
		<class>com.bra3v3ku.autoskola.dao.Studentskupinauchadzac</class>
		<class>com.bra3v3ku.autoskola.dao.Studentskupinavlastnik</class>
		<class>com.bra3v3ku.autoskola.dao.Vseobecneudaje</class>
		<class>com.bra3v3ku.autoskola.dao.Instruktor</class>
		<class>com.bra3v3ku.autoskola.dao.Student</class>
		
		<properties>
	
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:autoskola;create=true" />
			<property name="javax.persistence.jdbc.user" value="user1" />
			<property name="javax.persistence.jdbc.password" value="APP" />
			<property name="eclipselink.logging.level" value="FINEST" />
			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" /> 
			<property name="eclipselink.ddl-generation.output-mode"	value="database" /> 

		</properties>
	</persistence-unit>
</persistence>
